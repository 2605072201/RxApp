<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    style="@style/news_summary_card_view"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardBackgroundColor="@color/item_background"
    app:cardElevation="10px">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10px">

        <ImageView
            android:id="@+id/image_id"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/item_margin"
            android:scaleType="centerCrop"
            android:transitionName="@string/transition_photos"
            tools:src="@mipmap/ic_launcher"
            tools:targetApi="lollipop"/>

        <TextView
            android:id="@+id/title_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/image_id"
            android:layout_marginRight="@dimen/item_margin"
            android:layout_toRightOf="@+id/image_id"
            android:lines="2"
            android:textColor="@color/primary_text"
            android:textSize="@dimen/medium"
            tools:text="习近平:吹响建设科技强国号角国号角国号角"/>

        <TextView
            android:id="@+id/time_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/title_id"
            android:layout_marginRight="@dimen/item_margin"
            android:textColor="@color/tertiary_text"
            android:textSize="@dimen/medium"
            tools:text="05-28 20:09"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>

